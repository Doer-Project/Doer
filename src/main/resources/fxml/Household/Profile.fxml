<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.shape.Circle?>

<StackPane fx:id="rootPane"
           xmlns:fx="http://javafx.com/fxml/1"
           prefWidth="1200" prefHeight="800"
           style="-fx-background-color: #F0FDF4;">

    <!-- Centered Card -->
    <VBox alignment="CENTER" spacing="20"
          maxWidth="700" maxHeight="600"
          StackPane.alignment="CENTER"
          style="-fx-background-color: white; -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 18, 0, 0, 6);">

        <padding>
            <Insets top="34" right="36" bottom="34" left="36"/>
        </padding>

        <!-- Avatar (controller will set image) -->
        <ImageView fx:id="profileImage"
                   fitWidth="120" fitHeight="120"
                   preserveRatio="true" pickOnBounds="true">
            <clip>
                <Circle radius="60" centerX="60" centerY="60"/>
            </clip>
        </ImageView>

        <!-- Name -->
        <Label fx:id="lblName" text="Full Name"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #1B4242;"/>

        <!-- Contact info (left-aligned within card) -->
        <VBox spacing="8" alignment="CENTER_LEFT" prefWidth="600">

            <!-- Email -->
            <HBox spacing="8" alignment="CENTER_LEFT">
                <Label text="📧" />
                <Label fx:id="lblEmail" text="email@example.com" style="-fx-text-fill: #495057;"/>
            </HBox>

            <!-- Address -->
            <HBox spacing="8" alignment="CENTER_LEFT">
                <Label text="📍" />
                <Label fx:id="lblAddress" text="City, Country" style="-fx-text-fill: #495057;" wrapText="true"/>
            </HBox>

            <!-- New HBox for User Type -->
            <HBox spacing="8" alignment="CENTER_LEFT">
                <Label text="👤" />
                <Label fx:id="lblUserType" text="Worker" style="-fx-text-fill: #495057;"/>
            </HBox>

            <!-- Gender -->
            <HBox spacing="8" alignment="CENTER_LEFT">
                <Label text="⚧" />
                <Label fx:id="lblGender" text="Male" style="-fx-text-fill: #495057;"/>
            </HBox>

        </VBox>


        <Separator prefWidth="100"/>

        <!-- Buttons -->
        <HBox spacing="14" alignment="CENTER">
            <Button fx:id="btnEdit" text="Edit Profile"
                    style="-fx-background-color:#1B4242; -fx-text-fill:white; -fx-background-radius:8; -fx-padding:8 16;"/>
            <Button fx:id="btnChangePwd" text="Change Password"
                    style="-fx-background-color:transparent; -fx-text-fill:#1B4242; -fx-border-color:#1B4242; -fx-border-radius:8; -fx-padding:8 16;"/>
            <Button fx:id="btnHistory" text="History"
                    style="-fx-background-color: #1B4242; -fx-text-fill: white; -fx-background-radius: 8; -fx-background-radius:8; -fx-padding:8 16;"/>
        </HBox>

    </VBox>
</StackPane>
