<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.Household.HouseholdDBController"
            prefWidth="1200.0" prefHeight="700.0"
            style="-fx-border-color: transparent;">

    <!-- Main Background -->
    <background>
        <Background>
            <fills>
                <BackgroundFill>
                    <fill>
                        <LinearGradient>
                            <stops>
                                <Stop color="#0F2027"/>
                                <Stop offset="0.5" color="#203A43"/>
                                <Stop offset="1" color="#2C5364"/>
                            </stops>
                        </LinearGradient>
                    </fill>
                </BackgroundFill>
            </fills>
        </Background>
    </background>

    <!-- Sidebar -->
    <left>
        <VBox prefWidth="240.0" spacing="18.0"
              style="-fx-border-color: white; -fx-border-width: 0 1 0 0; -fx-border-radius: 0;"> <!-- Uniform 1px border -->
            <background>
                <Background>
                    <fills>
                        <BackgroundFill>
                            <fill>
                                <LinearGradient>
                                    <stops>
                                        <Stop color="#1A2E36"/>
                                        <Stop offset="1" color="#2B4654"/>
                                    </stops>
                                </LinearGradient>
                            </fill>
                        </BackgroundFill>
                    </fills>
                </Background>
            </background>
            <padding>
                <Insets top="40.0" right="20.0" bottom="40.0" left="25.0"/>
            </padding>
            <children>
                <Label text="🏠 Household Menu"
                       style="-fx-text-fill: #F0C08A; -fx-font-size: 22px; -fx-font-weight: bold;" />
                <Button fx:id="btnNewRequest" text="🆕 New Work Request" prefWidth="190.0" onAction="#createNewRequest"
                        style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-text-fill: #1B4242; -fx-font-size: 15px; -fx-font-weight: bold;" />
                <Button fx:id="btnOngoing" text="🔄 Ongoing Work" prefWidth="190.0" onAction="#onGoingWork"
                        style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-text-fill: #1B4242; -fx-font-size: 15px; -fx-font-weight: bold;" />
                <Button fx:id="btnFuture" text="📅 Future Scheduled Work" prefWidth="190.0" onAction="#futureWork"
                        style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-text-fill: #1B4242; -fx-font-size: 15px; -fx-font-weight: bold;" />
                <Button fx:id="btnCompleted" text="✅ Past Completed Work" prefWidth="190.0" onAction="#completedWork"
                        style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-text-fill: #1B4242; -fx-font-size: 15px; -fx-font-weight: bold;" />
                <Button fx:id="btnProfile" text="👤 Profile" prefWidth="190.0" onAction="#viewProfile"
                        style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-text-fill: #1B4242; -fx-font-size: 15px; -fx-font-weight: bold;" />
            </children>
        </VBox>
    </left>

    <!-- Top Bar -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0"
              style="-fx-border-color: white; -fx-border-width: 0 0 1 0;"> <!-- Uniform 1px border -->
            <background>
                <Background>
                    <fills>
                        <BackgroundFill>
                            <fill>
                                <LinearGradient>
                                    <stops>
                                        <Stop color="#2E4C5A"/>
                                        <Stop offset="1" color="#3B6070"/>
                                    </stops>
                                </LinearGradient>
                            </fill>
                        </BackgroundFill>
                    </fills>
                </Background>
            </background>
            <padding>
                <Insets top="25.0" right="30.0" bottom="25.0" left="40.0"/>
            </padding>
            <children>
                <Label text="👤 Household Dashboard"
                       style="-fx-text-fill: #F0C08A; -fx-font-size: 30px; -fx-font-weight: bolder;" />
                <Pane HBox.hgrow="ALWAYS"/> <!-- Spacer -->
                <Label text="𝐃𝐎𝐄𝐑"
                       style="-fx-text-fill: #F0C08A; -fx-font-size: 30px; -fx-font-weight: bolder;" />
            </children>
        </HBox>
    </top>

    <!-- Dynamic Center Content -->
    <center>
        <StackPane fx:id="contentPane"
                   style="-fx-background-color: transparent; -fx-border-color: white; -fx-border-width: 1 0 0 0; -fx-border-radius: 0;"
                   prefWidth="960.0" prefHeight="620.0" />
    </center>

</BorderPane>