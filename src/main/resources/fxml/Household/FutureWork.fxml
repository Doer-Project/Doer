<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.Household.FutureWorkController"
            prefWidth="1000.0" prefHeight="800.0"
            style="-fx-background-color: linear-gradient(to bottom right, #0F2027, #203A43, #2C5364);">

    <!-- Page Title -->
    <Label text="Future Scheduled Work"
           layoutX="40.0" layoutY="30.0"
           style="-fx-font-size: 30px; -fx-text-fill: orange; -fx-font-family: 'Verdana'; -fx-font-weight: bold;" />

    <!-- Scrollable white floating card -->
    <ScrollPane layoutX="40.0" layoutY="90.0" prefWidth="920.0" prefHeight="700.0"
                fitToWidth="true" fitToHeight="true"
                style="-fx-background-color: transparent;">
        <VBox spacing="20.0"
              style="-fx-background-color: white;
                     -fx-background-radius: 15;
                     -fx-padding: 20;
                     -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.25), 15, 0, 0, 8);">

            <!-- StackPane to fake the header background -->
            <StackPane>
                <!-- Fake light-colored header background -->
                <Rectangle height="30.0" width="880.0" arcWidth="12.0" arcHeight="12.0"
                           fill="#E6EBEC"
                           stroke="transparent"
                           StackPane.alignment="TOP_LEFT" />

                <!-- TableView over it -->
                <TableView fx:id="futureWorkTable" prefHeight="650.0" prefWidth="880.0"
                           style="-fx-background-radius: 12;">
                    <columns>
                        <TableColumn fx:id="colCategory" text="Category" prefWidth="150.0"
                                     style="-fx-text-fill: orange;" />
                        <TableColumn fx:id="colDate" text="Scheduled Date" prefWidth="150.0"
                                     style="-fx-text-fill: orange;" />
                        <TableColumn fx:id="colTime" text="Time" prefWidth="120.0"
                                     style="-fx-text-fill: orange;" />
                        <TableColumn fx:id="colDescription" text="Description" prefWidth="350.0"
                                     style="-fx-text-fill: orange;" />
                        <TableColumn fx:id="colStatus" text="Status" prefWidth="120.0"
                                     style="-fx-text-fill: orange;" />
                    </columns>
                </TableView>
            </StackPane>
        </VBox>
    </ScrollPane>

</AnchorPane>