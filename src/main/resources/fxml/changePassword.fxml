<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:id="changeID"
           fx:controller="controller.ChangePasswordController"
           style="-fx-background-color: rgba(0,0,0,0.5);">

    <VBox spacing="18" alignment="CENTER"
          prefWidth="420" prefHeight="400"
          style="-fx-background-color: linear-gradient(to bottom right, #ffffff, #f8f9fa);
                 -fx-background-radius: 16;
                 -fx-padding: 24;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 20, 0, 0, 8);">

        <Label text="ðŸ”’ Change Password"
               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

        <TextField fx:id="emailField" promptText="Enter your Email"
                   style="-fx-background-radius: 8; -fx-padding: 8;" />

        <PasswordField fx:id="passwordField" promptText="Enter New Password"
                       style="-fx-background-radius: 8; -fx-padding: 8;" />

        <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password"
                       style="-fx-background-radius: 8; -fx-padding: 8;" />

        <!-- OTP field hidden initially -->
        <TextField fx:id="otpField" promptText="Enter OTP"
                   visible="false" managed="false"
                   style="-fx-background-radius: 8; -fx-padding: 8;" />

        <HBox spacing="15" alignment="CENTER">
            <Button fx:id="otpButton" text="Send OTP"
                    onAction="#handleOtpAction"
                    prefWidth="120"
                    style="-fx-background-color: #4a90e2; -fx-text-fill: white; -fx-background-radius: 8;" />

            <Button text="Cancel"
                    onAction="#handleCancel"
                    prefWidth="100"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 8;" />
        </HBox>
    </VBox>
</StackPane>
