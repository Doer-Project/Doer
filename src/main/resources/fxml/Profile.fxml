<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<StackPane fx:id="rootPane"
           fx:controller="controller.ProfileController"
           xmlns:fx="http://javafx.com/fxml/1"
           prefWidth="1000" prefHeight="800"
           style="-fx-background-color: linear-gradient(to bottom right, #0F2027, #203A43, #2C5364);">

    <!-- Centered Card -->
    <VBox alignment="CENTER" spacing="20"
          maxWidth="700" maxHeight="600"
          StackPane.alignment="CENTER"
          style="
              -fx-background-color: white;
              -fx-background-radius: 20;
              -fx-padding: 30;
              -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 25, 0, 0, 8);
          ">

        <!-- Avatar (controller will set image) -->
        <ImageView fx:id="profileImage"
                   fitWidth="120" fitHeight="120"
                   preserveRatio="true" pickOnBounds="true">
            <clip>
                <Circle radius="60" centerX="60" centerY="60"/>
            </clip>
        </ImageView>

        <!-- Name -->
        <Label fx:id="lblName" text="Full Name"
               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #203A43; -fx-font-family: 'Verdana';"/>

        <!-- Contact info (left-aligned within card) -->
        <VBox spacing="12" alignment="CENTER_LEFT" prefWidth="600">

            <!-- Email -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="ðŸ“§" style="-fx-font-size: 16px;"/>
                <Label fx:id="lblEmail" text="email@example.com" style="-fx-text-fill: #3B6B6B; -fx-font-size: 14px;"/>
            </HBox>

            <!-- Address -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="ðŸ“" style="-fx-font-size: 16px;"/>
                <Label fx:id="lblAddress" text="City, Country" style="-fx-text-fill: #3B6B6B; -fx-font-size: 14px;"
                       wrapText="true"/>
            </HBox>

            <!-- User Type -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="ðŸ‘¤" style="-fx-font-size: 16px;"/>
                <Label fx:id="lblUserType" text="Worker" style="-fx-text-fill: #3B6B6B; -fx-font-size: 14px;"/>
            </HBox>

            <!-- Gender -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="âš§" style="-fx-font-size: 16px;"/>
                <Label fx:id="lblGender" text="Male" style="-fx-text-fill: #3B6B6B; -fx-font-size: 14px;"/>
            </HBox>

        </VBox>

        <Separator prefWidth="120"/>

        <!-- Buttons -->
        <HBox spacing="16" alignment="CENTER">
            <Button fx:id="btnEdit" text="Edit Profile" onAction="#editProfile"
                    style="
                        -fx-background-color: linear-gradient(to right, #FF9F57, #E8781C);
                        -fx-text-fill: white;
                        -fx-background-radius: 12;
                        -fx-padding: 8 20;
                        -fx-font-size: 14px;
                        -fx-font-weight: bold;
                        -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 6, 0, 0, 2);
                    "/>
            <Button fx:id="btnChangePwd" text="Change Password"
                    style="
                        -fx-background-color: linear-gradient(to right, #FF9F57, #E8781C);
                        -fx-text-fill: white;
                        -fx-background-radius: 12;
                        -fx-padding: 8 20;
                        -fx-font-size: 14px;
                        -fx-font-weight: bold;
                        -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 6, 0, 0, 2);
                    "/>
<!--            <Button fx:id="btnHistory" text="History"-->
<!--                    style="-->
<!--                        -fx-background-color: linear-gradient(to right, #FF9F57, #E8781C);-->
<!--                        -fx-text-fill: white;-->
<!--                        -fx-background-radius: 12;-->
<!--                        -fx-padding: 8 20;-->
<!--                        -fx-font-size: 14px;-->
<!--                        -fx-font-weight: bold;-->
<!--                        -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 6, 0, 0, 2);-->
<!--                    "/>-->
        </HBox>

    </VBox>
</StackPane>
