<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.worker.UpcomingJobController"
            prefWidth="1000.0" prefHeight="800.0"
            style="-fx-background-color: #E3F2FD;">

    <!-- Page Title -->
    <Label text="Upcoming Jobs"
           layoutX="40.0" layoutY="30.0"
           style="-fx-font-size: 30px; -fx-text-fill: #0D47A1; -fx-font-family: 'Verdana'; -fx-font-weight: bold;" />

    <!-- Scrollable Table Section -->
    <ScrollPane layoutX="40.0" layoutY="90.0" prefWidth="1070.0" prefHeight="650.0"
                fitToWidth="true" fitToHeight="true"
                style="-fx-background-color: transparent;">
        <VBox spacing="20.0">
            <TableView fx:id="upcomingTable" prefHeight="600.0" prefWidth="1050.0"
                       style="-fx-background-radius: 12;">

                <columns>
                    <TableColumn fx:id="colTaskId" text="Work ID" prefWidth="70.0" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="colHouseholdId" text="Customer ID" prefWidth="100.0" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="colTitle" text="Service Title" prefWidth="150.0" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="colAddress" text="Address" prefWidth="170.0" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="colDate" text="Scheduled Date" prefWidth="150.0" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="colStartTime" text="Start time" prefWidth="100.0" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="colEndTime" text="Start Time" prefWidth="100.0" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="colCost" text="Estimated Cost" prefWidth="120.0" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="colStatus" text="Status" prefWidth="100.0" style="-fx-alignment: CENTER;"/>
                </columns>
            </TableView>

            <Label text="(These are the jobs scheduled for you in the upcoming days...)"
                   style="-fx-text-fill: #555555; -fx-font-size: 14px;" />
        </VBox>
    </ScrollPane>

</AnchorPane>
