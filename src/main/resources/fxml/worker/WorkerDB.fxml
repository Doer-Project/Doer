<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.ScrollPane?>
<BorderPane prefHeight="900.0" prefWidth="1400.0"
            fx:controller="controller.worker.WorkerDBController"
            style="-fx-background-color: linear-gradient(to bottom right, #E3F2FD, #90CAF9);"
            xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1">

    <!-- Sidebar -->
    <left>
        <VBox prefWidth="250.0" spacing="18.0"
              style="-fx-background-color: rgba(255,255,255,0.2); -fx-background-radius: 0 25 25 0;">
            <padding>
                <Insets bottom="40.0" left="25.0" right="20.0" top="40.0"/>
            </padding>
            <children>
                <Label style="-fx-text-fill: #1B4242; -fx-font-size: 20px; -fx-font-weight: bold;"
                       text="🛠 Worker Menu"/>
                <Button fx:id="btnAvailableRequests" prefWidth="190.0" onAction="#availableRequest"
                        style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-text-fill: #1B4242;"
                        text="📋 Available Requests"/>
                <Button fx:id="btnTodaySchedule" prefWidth="190.0" onAction="#todaySchedule"
                        style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-text-fill: #1B4242;"
                        text="📅 Today's Schedule"/>
                <Button fx:id="btnUpcomingTasks" prefWidth="190.0" onAction="#upcomingTask"
                        style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-text-fill: #1B4242;"
                        text="📆 Upcoming Tasks"/>
                <Button fx:id="btnPastWork" prefWidth="190.0" onAction="#pastWork"
                        style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-text-fill: #1B4242;"
                        text="📖 Past Work"/>
                <Button fx:id="btnProfile" prefWidth="190.0" onAction="#profile"
                        style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-text-fill: #1B4242;"
                        text="👤 Profile"/>
                <Button fx:id="btnInbox" prefWidth="190.0" onAction="#openInbox"
                        style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-text-fill: #1B4242;"
                        text="📥 Inbox"/>
                <Button fx:id="btnLogOut" prefWidth="190.0" onAction="#logout"
                        style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-text-fill: #1B4242;"
                        text="⏻ Log-Out"/>
            </children>
        </VBox>
    </left>

    <!-- Top Bar -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0"
              style="-fx-background-color: rgba(255,255,255,0.6); -fx-background-radius: 0 0 20 20;">
            <padding>
                <Insets bottom="25.0" left="40.0" right="30.0" top="25.0"/>
            </padding>
            <children>
                <Label style="-fx-text-fill: #1B4242; -fx-font-size: 28px; -fx-font-weight: bold;"
                       text="🛠 Worker Dashboard"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Label style="-fx-text-fill: #1B4242; -fx-font-size: 28px; -fx-font-weight: bold;" text="𝐃𝐎𝐄𝐑"/>
            </children>
        </HBox>
    </top>

    <!-- Center Content Area (Resizable and Fits 100%) -->
    <center>
        <ScrollPane fx:id="scrollPane"
                    fitToWidth="true"
                    fitToHeight="true"
                    style="-fx-background-color: transparent;">
            <StackPane fx:id="contentPane"
                       StackPane.alignment="TOP_LEFT"
                       style="-fx-background-color: transparent;"
                       maxWidth="Infinity"
                       maxHeight="Infinity"
                       prefWidth="1000"
                       prefHeight="800"/>
        </ScrollPane>
    </center>

</BorderPane>