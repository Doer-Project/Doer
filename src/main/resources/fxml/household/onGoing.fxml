<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>

<ScrollPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.household.HouseholdOngoingController"
            prefWidth="1000.0" prefHeight="800.0"
            fitToWidth="true"
            style="-fx-background-color: transparent;">

    <content>
        <AnchorPane prefWidth="1000.0" prefHeight="800.0">
            <background>
                <Background>
                    <fills>
                        <BackgroundFill>
                            <fill>
                                <LinearGradient startX="0" startY="0" endX="1" endY="1" proportional="true">
                                    <stops>
                                        <Stop offset="0" color="#0F2027"/>
                                        <Stop offset="0.5" color="#203A43"/>
                                        <Stop offset="1" color="#2C5364"/>
                                    </stops>
                                </LinearGradient>
                            </fill>
                        </BackgroundFill>
                    </fills>
                </Background>
            </background>

            <!-- Title -->
            <Label text="Ongoing Work"
                   layoutX="40" layoutY="30"
                   style="-fx-font-size: 30px; -fx-text-fill: #F7931E; -fx-font-family: 'Verdana'; -fx-font-weight: bold;" />

            <!-- Main Card Area -->
            <VBox  fx:id="container" layoutX="40" layoutY="90" spacing="20" prefWidth="920">
                <VBox spacing="15"
                      style="-fx-background-color: white; -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 4);">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>

                    <HBox spacing="50" alignment="CENTER_LEFT">
                        <VBox spacing="10">
                            <Label text="Category: Electrician"
                                   style="-fx-font-size: 18px; -fx-text-fill: #1B4242;" />
                            <Label text="Date: 2025-07-24"
                                   style="-fx-font-size: 16px; -fx-text-fill: #4B4B4B;" />
                            <Label text="Description: Fan not working in bedroom."
                                   wrapText="true" maxWidth="600"
                                   style="-fx-font-size: 15px; -fx-text-fill: #555;" />
                        </VBox>

                        <VBox spacing="10" alignment="CENTER_RIGHT">
                            <Label text="Status: In Progress"
                                   style="-fx-font-size: 16px; -fx-text-fill: #0A9396; -fx-font-weight: bold;" />
                            <Button text="View Details"
                                    style="-fx-background-color: #F7931E; -fx-text-fill: white; -fx-background-radius: 10; -fx-padding: 8 24;" />
                        </VBox>
                    </HBox>
                </VBox>

                <Label text="(More items can be loaded dynamically from DB...)"
                       style="-fx-text-fill: #888888; -fx-font-size: 14px;" />
            </VBox>
        </AnchorPane>
    </content>
</ScrollPane>
