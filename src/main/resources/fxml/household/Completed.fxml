<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            prefWidth="1000.0" prefHeight="800.0"
            style="-fx-background-color: #E8F5E9;">
<!--    controller remaining-->

    <!-- Page Title -->
    <Label text="Past Completed Work"
           layoutX="40.0" layoutY="30.0"
           style="-fx-font-size: 30px; -fx-text-fill: #1B4242; -fx-font-family: 'Verdana'; -fx-font-weight: bold;" />

    <!-- Make the VBox section scrollable -->
    <ScrollPane layoutX="40.0" layoutY="90.0" prefWidth="920.0" prefHeight="700.0"
                fitToWidth="true" fitToHeight="true"
                style="-fx-background-color: transparent;">
        <VBox spacing="20.0">
            <TableView fx:id="completedTable" prefHeight="650.0" prefWidth="920.0"
                       style="-fx-background-radius: 12;">

                <columns>
                    <TableColumn fx:id="colWorkId" text="Work ID" prefWidth="100.0"/>
                    <TableColumn fx:id="colService" text="Service" prefWidth="150.0"/>
                    <TableColumn fx:id="colWorker" text="Worker" prefWidth="150.0"/>
                    <TableColumn fx:id="colDate" text="Date Completed" prefWidth="150.0"/>
                    <TableColumn fx:id="colRating" text="Rating" prefWidth="100.0"/>
                    <TableColumn fx:id="colReview" text="Review" prefWidth="150.0"/>
                    <TableColumn fx:id="colAmount" text="Amount Paid" prefWidth="100.0"/>
                </columns>
            </TableView>

            <Label text="(This table shows all jobs you have completed...)"
                   style="-fx-text-fill: #888888; -fx-font-size: 14px;" />
        </VBox>
    </ScrollPane>

</AnchorPane>
