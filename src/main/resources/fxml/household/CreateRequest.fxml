<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:id="mainContentArea"
            fx:controller="controller.household.WorkReqController"
            prefWidth="1000" prefHeight="800"
            style="-fx-background-color: linear-gradient(to bottom right, #0F2027, #203A43, #2C5364);">

    <!-- Main Title -->
    <Label text="Create New Request"
           layoutX="40" layoutY="30"
           style="-fx-font-size: 32px; -fx-text-fill: #ED8F03; -fx-font-family: 'Verdana'; -fx-font-weight: bold;" />

    <!-- Scrollable area for form -->
    <ScrollPane layoutX="100" layoutY="100" prefWidth="850" prefHeight="570"
                fitToWidth="true"
                style="-fx-background-color: transparent; -fx-border-color: transparent;">

        <VBox spacing="30"
              style="-fx-background-color: white;
                    -fx-background-radius: 20; -fx-padding: 30;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 15, 0, 0, 5);"
              prefWidth="830">

            <!-- Section 1: Work Details -->
            <VBox spacing="15">
                <Label text="1. Basic Work Details"
                       style="-fx-font-size: 18px; -fx-text-fill: #203A43; -fx-font-weight: bold;" />

                <TextField fx:id="titleField" promptText="Work Title"
                           prefWidth="790"
                           style="-fx-background-radius: 8; -fx-background-color: #F5F5F5; -fx-padding: 10;" />

                <ComboBox fx:id="categoryComboBox" promptText="Select Work Category"
                          prefWidth="790" prefHeight="40"
                          style="-fx-background-radius: 8; -fx-background-color: #F5F5F5;" >
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Plumber" />
                            <String fx:value="Electrician" />
                            <String fx:value="Cleaner" />
                            <String fx:value="Painter" />
                            <String fx:value="Cook" />
                            <String fx:value="Gardener" />
                        </FXCollections>
                    </items>
                </ComboBox>

                <TextArea fx:id="descriptionTextArea" promptText="Describe the issue or requirement clearly."
                          wrapText="true" prefRowCount="4" prefWidth="790"
                          style="-fx-background-radius: 8; -fx-background-color: #F5F5F5; -fx-padding: 10;" />
            </VBox>

            <!-- Section 2: Scheduling -->
            <VBox spacing="15">
                <Label text="2. Scheduling Preferences"
                       style="-fx-font-size: 18px; -fx-text-fill: #203A43; -fx-font-weight: bold;" />

                <DatePicker fx:id="requestDatePicker" promptText="Select Preferred Date"
                            prefWidth="790" prefHeight="40"
                            style="-fx-background-radius: 8; -fx-background-color: #F5F5F5;" />
            </VBox>

            <!-- Section 3: Location -->
            <VBox spacing="15">
                <Label text="3. Location Details"
                       style="-fx-font-size: 18px; -fx-text-fill: #203A43; -fx-font-weight: bold;" />

                <TextField fx:id="areaTextField" promptText="Area/Locality (Address)"
                           prefWidth="790"
                           style="-fx-background-radius: 8; -fx-background-color: #F5F5F5; -fx-padding: 10;" />

                <ComboBox fx:id="cityTextField" promptText="City"
                          prefWidth="790" prefHeight="40"
                          style="-fx-background-radius: 8; -fx-background-color: #F5F5F5;" >
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Ahmedabad" />
                            <String fx:value="Mumbai" />
                            <String fx:value="Delhi" />
                            <String fx:value="Chennai" />
                            <String fx:value="Kolkata" />
                        </FXCollections>
                    </items>
                </ComboBox>

                <TextField fx:id="pinCodeTextField" promptText="Pin Code"
                           prefWidth="790"
                           style="-fx-background-radius: 8; -fx-background-color: #F5F5F5; -fx-padding: 10;" />
            </VBox>

            <!-- Buttons -->
            <HBox spacing="20" alignment="CENTER_RIGHT" prefWidth="790">
                <Button fx:id="resetButton" text="Reset"
                        style="-fx-background-color: transparent; -fx-text-fill: #203A43; -fx-border-color: #203A43; -fx-border-radius: 10; -fx-padding: 8 24;" />

                <Button fx:id="submitButton" text="Submit Request"
                        style="-fx-background-color: linear-gradient(to right, #FFB75E, #ED8F03); -fx-text-fill: white; -fx-background-radius: 10; -fx-padding: 8 24;" />
            </HBox>

        </VBox>
    </ScrollPane>

</AnchorPane>