<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.household.HouseholdDBController"
            prefWidth="1400.0" prefHeight="900.0"
            style="-fx-background-color: linear-gradient(to bottom right, #E8F5E9, #C8E6C9);">

    <!-- Sidebar. -->
    <left>
        <VBox prefWidth="240.0" spacing="18.0"
              style="-fx-background-color: rgba(255,255,255,0.2); -fx-background-radius: 0 25 25 0;">
            <padding>
                <Insets top="40.0" right="20.0" bottom="40.0" left="25.0"/>
            </padding>
            <children>
                <Label text="🏠 Household Menu"
                       style="-fx-text-fill: #1B4242; -fx-font-size: 20px; -fx-font-weight: bold;" />
                <Button fx:id="btnNewRequest" text="🆕 New Work Request" prefWidth="190.0" onAction="#createNewRequest"
                        style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-text-fill: #1B4242;" />
                <Button fx:id="btnOngoing" text="🔄 Ongoing Work" prefWidth="190.0" onAction="#onGoingWork"
                        style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-text-fill: #1B4242;" />
                <Button fx:id="btnFuture" text="📅 Future Scheduled Work" prefWidth="190.0" onAction="#futureWork"
                        style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-text-fill: #1B4242;" />
                <Button fx:id="btnCompleted" text="✅ Past Completed Work" prefWidth="190.0" onAction="#completedWork"
                        style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-text-fill: #1B4242;" />
                <Button fx:id="btnProfile" text="👤 Profile" prefWidth="190.0" onAction="#viewProfile"
                        style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-text-fill: #1B4242;" />
            </children>
        </VBox>
    </left>

    <!-- Top Bar with DOER -->
    <top>
        <HBox alignment="CENTER_LEFT"
              style="-fx-background-color: rgba(255,255,255,0.6); -fx-background-radius: 0 0 20 20;"
              spacing="20.0">
            <padding>
                <Insets top="25.0" right="30.0" bottom="25.0" left="40.0"/>
            </padding>
            <children>
                <Label text="👤 Household Dashboard"
                       style="-fx-text-fill: #1B4242; -fx-font-size: 28px; -fx-font-weight: bold;" />
                <Pane HBox.hgrow="ALWAYS"/> <!-- Spacer -->
                <Label text="𝐃𝐎𝐄𝐑"
                       style="-fx-text-fill: #1B4242; -fx-font-size: 28px; -fx-font-weight: bold;" />
            </children>
        </HBox>
    </top>

    <!-- Dynamic Center Content -->
    <center>
        <StackPane fx:id="contentPane"
                   style="-fx-background-color: transparent; -fx-background-radius: 20;"
                   prefWidth="960.0" prefHeight="620.0" />
    </center>

</BorderPane>
